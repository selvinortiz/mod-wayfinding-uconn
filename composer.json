{
  "require": {
    "craftcms/cms": "3.2.9",
    "verbb/field-manager": "^2.1",
    "vlucas/phpdotenv": "^2.4.0"
  },
  "autoload": {
    "psr-4": {
      "modules\\utility\\": "lib/modules/utility/src/"
    }
  },
  "repositories": [
    {
      "type": "path",
      "url": "./lib/plugins/hiddenfields"
    }
  ],
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true,
    "platform": {
      "php": "7.0"
    }
  },
  "scripts": {
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ]
  }
}
